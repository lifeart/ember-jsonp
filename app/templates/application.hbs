<div style="margin: 0 auto;width: 1000px">

 <div style="margin-top: 20px; margin-bottom: 20px;">
   {{input value=searchTag placeholder="flickr search tag"}}
 </div>

    <div>
      {{#each items as |item|}}

          <div title="{{item.title}}"
                  style="
                          display: inline-block;
                          background-image: url({{item.media.m}}), url(//www.gravatar.com/avatar/0cf15665a9146ba852bf042b0652780a?s=200);
                          background-position: center;
                          background-size: cover;
                          width:150px;
                          height: 150px;">

          </div>

      {{else}}
        <p>no search results</p>
      {{/each}}
    </div>
</div>